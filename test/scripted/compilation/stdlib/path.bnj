# test:subtest
# test:output "ok,Kind.ALREADY_EXISTS"

func main() {
    var path = Path.from("directory");
    
    try _ in path.create_dir() {
        print("ok");
    } except error: Error {
        print(error.kind);
    }

    print(',');
    
    try _ in path.create_dir() {
        print("ok");
    } except error: Error {
        print(error.kind);
    }

    path.remove_dir();
}

