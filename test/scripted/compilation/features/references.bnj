# test:subtest
# test:output "42,true"

struct S {
    var a: i32;
    var b: bool;
}

func f(ref s: S) {
    s.a = 42;
    s.b = true;
}

func main() {
    var s = S {
        a: 0,
        b: false,
    };

    f(s);

    print(s.a);
    print(',');
    print(s.b);
}

# test:subtest
# test:output "42,0.25,true"

func f[T](ref value: T) {
    print(*value);
}

func main() {
    f(42);
    print(',');
    f(0.25);
    print(',');
    f(true);
}
