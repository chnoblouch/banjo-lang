use std.config;
use libc as c;

meta if config.OS == config.MACOS {
    const ENOENT: i32 = 2;
    const EACCES: i32 = 13;

    struct Sockaddr {
        var len: u8;
        var family: u8;
        var data: [u8; 14];
    }

    struct Addrinfo {
        var flags: i32;
        var family: i32;
        var socktype: i32;
        var protocol: i32;
        var addrlen: u32;
        var canonname: *u8;
        var addr_: *Sockaddr;
        var next: *Addrinfo;
    }

    type ClockId = u64;

    struct Timespec {
        var tv_sec: c.LongLong;
        var tv_nsec: c.Long;
    }

    const CLOCK_REALTIME: ClockId = 0;
    const CLOCK_MONOTONIC: ClockId = 6;

    native func __error() -> *i32;

    pub func errno() -> i32 {
        return *__error();
    }
}
