use std.config;

# FIXME: I think `char` is not unsigned on all platforms
type Char = u8;
type UChar = u8;
type Short = i16;
type UShort = u16;
type Int = i32;
type UInt = u32;

meta if config.ARCH == config.X86_64 || config.ARCH == config.AARCH64 {
    type Long = i64;
    type ULong = u64;
} else if config.ARCH == config.WASM {
    type Long = i32;
    type ULong = u32;
}

type LongLong = i64;
type ULongLong = u64;
