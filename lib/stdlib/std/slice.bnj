struct Slice[T] {
    var elements: *T;
    var length: usize;

    pub func new(elements: *T, length: usize) -> Slice[T] {
        return Slice[T] { elements, length };
    }

    pub func new_empty() -> Slice[T] {
        return Slice[T] {
            elements: null,
            length: 0,
        };
    }

    pub func as_bytes(self) -> Slice[u8] {
        return Slice[u8] {
            elements: self.elements as *u8,
            length: self.length * meta(T).size,
        };
    }
}
